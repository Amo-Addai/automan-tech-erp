  <!--/ Newsletter Start /-->
  <section class="section-newsletter section-t8">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="title-wrap d-flex justify-content-between">
            <div class="title-box">
              <h2 class="title-a">Subscribe to our Newsletter</h2>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <!-- PUT THE FORM HERE FOR PEOPLE TO SUBSCRIBE TO THE NEWSLETTER WITH THEIR EMAILS -->
        <!-- ALSO, GIVE THEM THE OPTION TO UNSUBSCRIBE FROM THE NEWSLETTER IF THEY WANT TO -->
        <form class="form-a subscribeForm" action="" method="post" role="form">
          <div id="subscribeForm_sendmessage">You've successfully joined. Thank you!</div>
          <div id="subscribeForm_errormessage">Sorry, something went wrong.</div>
          <div class="row">
            <div class="col-md-6 mb-3">
              <div class="form-group">
                <input type="text" name="full_name" class="form-control form-control-lg form-control-a" placeholder="Enter Your Full Name" data-rule="minlen:4" data-msg="Please enter at least 4 chars">
                <div class="validation"></div>
              </div>
            </div>
            <div class="col-md-6 mb-3">
              <div class="form-group">
                <input name="email" type="email" class="form-control form-control-lg form-control-a" placeholder="Enter Your Email" data-rule="email" data-msg="Please enter a valid email">
                <div class="validation"></div>
              </div>
            </div>
            <div class="col-md-6 mb-3">
              <div class="form-group">
                <button type="submit" class="btn btn-a">Subscribe</button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </section>
